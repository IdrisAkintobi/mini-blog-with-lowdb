{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ESNext",
      "ES6",
      "ES7",
      "ES5"
    ],
    "module": "ES6",
    "sourceMap": true,
    "outDir": ".build",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.js"
  ]
}